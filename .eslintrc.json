{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "next",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "semi": "error",
    "no-undef": "off",
    "keyword-spacing": ["error", { "before": true }],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }]
  }
}
